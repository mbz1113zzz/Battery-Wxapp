<!--pages/value/index.wxml-->
<view>
  <van-toast id="van-toast"/>
  <view class='_title'>电池价格查询结果</view>
  <text>\n</text>
  <view class="_introduction">本功能依据提供的有限数据对电池价格进行模拟测算，查询结果仅供参考，不可作为权威凭证</view>
  <view class="module_container">
    <view class="text_container">
      <text>{{percentage}}%</text>
    </view>
    <view class="canvas_container" style="margin-top: 50rpx;">
      <mpProgress config="{{config}}" percentage="{{percentage}}"></mpProgress>
      <view style="text-align: center; font-size: 40rpx;margin-top: 25rpx;">健康状态</view>
      <view style="text-align: center; margin-top: 50rpx;">
        <van-button class="button1" 
        plain
        round 
        type="primary" 
        bindtap="onButton1">
          回收 
        </van-button>
        <van-button 
        class="button1" 
        style="margin-left: 45rpx;"
        plain
        round 
        type="primary"
        bindtap="onButton2">
          放弃 
        </van-button>
      </view>
    </view>  
  </view>
</view>
