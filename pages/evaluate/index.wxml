<!--pages/evaluate/index.wxml-->
<view style="margin-top: 70rpx;">
<view class='_title'>估算您的电池价格</view>
<button class="btn1" bindtap="show_dialog">我们将如何估算？</button>
<van-dialog id="van-dialog" />
<van-cell-group>
  <van-cell 
    title="请选择您的车型" 
    is-link 
    value="{{type}}"
    bind:click="showPopup1" />
  <van-cell 
    title="您的购车时间" 
    is-link
    value="{{date}}"
    bind:click="showPopup2" />
  <van-field 
    value="{{distance}}"
    label="车辆行驶距离"
    placeholder="（km）"
    input-align="right"
    bind:change="onChange3"
    />
</van-cell-group>
<van-popup 
  show="{{ show1 }}" 
  position="bottom"
  custom-style="height:50%;"
  bind:close="onClose1">
  <van-picker 
    columns = "{{columns}}" 
    show-toolbar = "true"
    bind:change = "onChange1" 
    bind:confirm = "onConfirm1"
    bind:cancel = "onCancel1"
    />
</van-popup>
<van-popup 
  show="{{ show2 }}"
  position="bottom"
  custom-style="height:50%;"
  bind:close="onClose2">
  <van-datetime-picker
  type="date"
  value="{{ currentDate }}"
  min-date="{{ minDate }}"
  max-date="{{ maxDate }}"
  formatter="{{formatter}}"
  bind:confirm="onConfirm2" 
  bind:cancel="onCancel2"
/>
</van-popup>
<view style="text-align: center;margin-top: 50rpx;">
  <van-button 
  color="#43b3f0" 
  plain
  round size="normal" 
  type="primary" 
  bindtap="toValue">
    确认
  </van-button>
</view>
</view>