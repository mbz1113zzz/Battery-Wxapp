.index_swiper swiper {
  width: 750rpx;
  height: 350rpx;
}
.index_swiper swiper image {
  width: 100%;
  height: 250rpx;
}
.index_cate {
  display: flex;
}


.selection{
  border-bottom: 0px solid #ddd;
}
.indexcontainer{
  width: 100%;
  height: 100%;
}
.selection{
  margin-top: 30px;
}

.header{
  border-left-width: 2px;
  border-left-style: solid;
  border-left-color:  rgb(8, 59, 245);
  display: flex;
  justify-content: space-between;
  height: 30px;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-top: 10px;
  margin-bottom: 10px;
}
.all{
  font-size: 14px;
  color: rgb(170, 170, 170);
}

.alll{
  margin-left: 5px;
  color: rgb(3, 118, 212)
}

.content{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.content-item{
  width: 46%;
  height: 300rpx;
  background-color:  rgb(255, 255, 255);
  margin: 5px;
  /* 绝对定位的父级必须要定位 */
  position: relative;
}
.content-image{
  width: 90%;
  height: 90%;
}

.content-item-title{
  position: absolute; /*绝对定位,文字覆盖图片上*/
  color: rgb(0, 0, 0);
  top: 250rpx;
  font-size: 16px;
  width: 100%;
  height: 55rpx; /* 设置容器高度,显示渐变的高度 */
  text-align: center;
  /* 背景渐变:bottom:从下到上,右0.8向0透明渐变 */
  display: flex; /* flex布局,控制容器内文字元素在底部 */
  flex-direction: column;
  justify-content: flex-end;
  padding: 1% 1% 1% 1%;
}


.list-item{
  width: 100%;
  height: 300rpx;
}
.list-item-image{
  width: 100%;
  height: 200rpx;
  position: relative;
}
.slide-image{
  width: 100%;
  height:  270rpx;
}
.slide-image1{
  width: 100%;
  height:  260rpx;
}
.list-item-text{
  width: 100%;
  height: 10rpx;
 
}
.list-item-text-title{
  margin-top: -35px;
  font-size: 20px;
  color: rgb(250, 0, 0);
}

.avatar{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -45rpx;
  right: 50rpx;
}
.list-item-text{
  margin-top: -10px;
  padding-left: 2%;
  padding-right: 2%;
}
.list-item-text-context{
  font-size: 16px;
  margin-top: 0px;
  color: rgb(0, 0, 0);
  margin-bottom: 18px;
}